<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lt_test_error"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fdfdfd"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="visible">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cicle"
        android:gravity="center"
        android:paddingTop="2dp"
        android:text="10/15"
        android:textColor="@color/colorAccent"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_test_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Если долго мучиться,\nчто нибудь получиьтся"
        android:textColor="#CACACA"
        android:textSize="16sp" />

    <Button
        android:layout_marginTop="24dp"
        android:text="@string/btn_test_result"
        android:background="@color/colorPrimary"
        android:textColor="@color/color_title_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>