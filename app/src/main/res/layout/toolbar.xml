<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:id="@+id/test_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_toolbar_edit_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:text="@string/tv_edit_mode"
            android:textColor="@color/color_title_toolbar"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/color_title_toolbar"
            android:textSize="20sp"
            tool:text="Dictionary" />

        <Switch
            android:id="@+id/sw_toolbar_edit_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="8dp"
            android:visibility="gone" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/sp_translation_lang_from"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                tools:paddingStart="16dp"
                android:gravity="center"
                android:textColor="@color/color_title_toolbar"
                android:textSize="14sp"
                android:visibility="visible"
                tool:text="Английский"
                tools:ms_background_color="@color/colorPrimary"
                 />

            <ImageButton
                android:id="@+id/btn_translation_swap"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@color/colorPrimary"
                android:src="@drawable/ic_swap"
           />

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/sp_translation_lang_dest"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@null"
                android:gravity="center"
                android:textColor="@color/color_title_toolbar"
                android:textSize="14sp"
                android:visibility="visible"
                tool:text="@string/lang_rus"
                tools:ms_background_color="@color/colorPrimary"
                 />
        </LinearLayout>
    </FrameLayout>
</android.support.v7.widget.Toolbar>