<?xml version="1.0" encoding="utf-8"?> <!--todo Нужно переделать кнопки!!!!-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lt_test_testing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_collapseParallaxMultiplier="0.0">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp">

            <TextView
                android:id="@+id/tv_question"
                android:layout_width="match_parent"
                android:layout_height="142dp"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="28sp"
                tools:text="Included"

                />
        </android.support.v7.widget.CardView>

        <GridLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="208dp"
            android:layout_marginTop="20dp"
            android:columnCount="2">

            <android.support.v7.widget.CardView

                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:layout_rowWeight="1"
                android:gravity="center"
                app:cardCornerRadius="16dp">

                <TextView
                    android:id="@+id/tv_answer_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="4dp"
                    android:gravity="center"
                    tools:text="Variant1" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:layout_rowWeight="1"
                android:gravity="center"
                app:cardCornerRadius="16dp">

                <TextView
                    android:id="@+id/tv_answer_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="4dp"
                    android:gravity="center"
                    tools:text="Variant1" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:layout_rowWeight="1"
                android:gravity="center"
                app:cardCornerRadius="16dp">

                <TextView
                    android:id="@+id/tv_answer_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="4dp"
                    android:gravity="center"
                    tools:text="Variant1" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:layout_rowWeight="1"
                android:gravity="center"
                app:cardCornerRadius="16dp">

                <TextView
                    android:id="@+id/tv_answer_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="4dp"
                    android:gravity="center"
                    tools:text="Variant1" />
            </android.support.v7.widget.CardView>


        </GridLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lt_test_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fdfdfd"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_comic" />

        <TextView
            android:id="@+id/tv_test_empty_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="@string/tv_test_error"
            android:textColor="#CACACA"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/lt_test_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fdfdfd"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tv_test_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cicle"
            android:gravity="center"
            android:paddingTop="2dp"
            android:textColor="@color/colorAccent"
            android:textSize="22sp"
            tools:text="10/15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/test_result_dep"
            android:textColor="#CACACA"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_test_result_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:background="@drawable/btn_next"
            android:text="@string/btn_test_result"
            android:textColor="@color/color_title_toolbar" />
    </LinearLayout>


</FrameLayout>